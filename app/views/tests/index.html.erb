<h1>Listing tests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Passed</th>
      <th>Area</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.user_id %></td>
        <td><%= test.passed %></td>
        <td><%= test.area_id %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @areas.each do |area| %>
<%= link_to area.name, new_test_path(:area_id => area.id)%> <br />

<% end %>
