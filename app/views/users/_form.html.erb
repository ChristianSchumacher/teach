<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :salutation,'Anrede' %><br>
    <%= f.text_field :salutation %>
  </div>
  <div class="field">
    <%= f.label :first_name,'Vornamäe' %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :name,'Nachäname' %><br>

    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :department_id,'Abteilung' %><br>
    <%= f.collection_select :department_id, Area.order(:name).all, :id, :name%>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :system_admin,'System-Admin?' %><br>
    <%= f.check_box :system_admin %>
  </div>
  <div class="field">
    <%= f.label :image,'Benutzerbild' %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
