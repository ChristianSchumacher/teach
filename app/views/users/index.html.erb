<h1>Benutzer</h1>

<table border="1"> 
  <thead>
    <tr>
      <th>Anrede</th>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Bild</th>
      <th>Email</th>
      <th>Abteilung</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.salutation %></td>
        <td><%= user.first_name %></td>
        <td><%= user.name %></td>
        <% if user.image.nil? %>
        <td></td>
        <% else %>
        <td align="center"><%= image_tag("#{user.image}", :size => "50x50") %></td>
        <% end %>
        <td><%= user.email %></td>
        <td><%= user.department_id %></td>
         <td><%= link_to(image_tag('show.png', :size => "30x30",:title => "Benutzer anzeigen"), user) %></td>
        <td><%= link_to(image_tag('edit.png', :size => "30x30",:title => "Benutzer bearbeiten"), edit_user_path(user)) %></td>
        <td><%= link_to(image_tag('del.png', :size => "30x30",:title => "Benutzer lÃ¶schen"), user, method: :delete, data: { confirm: 'Sind Sie sicher?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

